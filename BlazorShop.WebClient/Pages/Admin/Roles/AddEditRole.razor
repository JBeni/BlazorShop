@page "/admin/roles/add"
@page "/admin/roles/edit/{Id:int}"

@attribute [Authorize(Policy = StringRoleResources.Admin)]

@inject IRoleService RoleService
@inject NavigationManager NavManager
@inject HttpInterceptorService Interceptor

<h1>@Title Role</h1>
<hr />

<EditForm Model="@Role" OnValidSubmit="SaveRole">
    <FluentValidationValidator />

    <div class="mb-3">
        <div class="col-md-4">
            <MudTextField class="form-control" InputType="InputType.Text"
                @bind-Value="Role.Name" Label="Name"
                For="@(() => Role.Name)"
                          Variant="MudBlazor.Variant.Outlined"></MudTextField>
        </div>
    </div>

    <div class="form-group">
        <MudButton Variant="MudBlazor.Variant.Filled" StartIcon="@Icons.Material.Filled.Save" Color="Color.Primary" ButtonType="MudBlazor.ButtonType.Submit">
            Save
        </MudButton>
        <MudButton Variant="MudBlazor.Variant.Filled" StartIcon="@Icons.Material.Filled.Cancel" Color="Color.Error" @onclick="Cancel">
            Cancel
        </MudButton>
    </div>
</EditForm>

@code {
    [Parameter]
    public int Id { get; set; }
    protected string Title = "Add";

    public RoleResponse Role = new();

    public void Dispose() => Interceptor.DisposeEvent();

    /// <summary>
    /// Initialize the component on load.
    /// </summary>
    protected override void OnInitialized()
    {
        Interceptor.RegisterEvent();
    }

    /// <summary>
    /// Initialize the component using the parameter.
    /// </summary>
    protected override async Task OnParametersSetAsync()
    {
        if (Id != 0)
        {
            Title = "Edit";
            Role = await RoleService.GetRole(Id);
        }
    }

    /// <summary>
    /// Save the role.
    /// </summary>
    protected async Task SaveRole()
    {
        RequestResponse result = new();
        if (Role.Id != 0)
        {
            result = await RoleService.UpdateRole(Role);
        }
        else
        {
            result = await RoleService.AddRole(Role);
        }
        if (result.Successful)
        {
            Cancel();
        }
    }

    /// <summary>
    /// Cancel.
    /// </summary>
    public void Cancel()
    {
        NavManager.NavigateTo("/admin/roles");
    }
}
